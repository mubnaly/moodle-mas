# ==============================================================================
# Moodle Backend Environment Configuration
# ==============================================================================
# Copy this file to .env and customize for your environment
# DO NOT commit .env to version control!
# ==============================================================================

# ==============================================================================
# GENERAL SETTINGS
# ==============================================================================
COMPOSE_PROJECT_NAME=mybrand
DOCKER_IMAGE_NAME=mybrand-lms
DOCKER_IMAGE_TAG=latest
TIMEZONE=UTC

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================
# Port to expose the application (use 80 for production with reverse proxy)
APP_PORT=8080

# Your domain name (used by Traefik for SSL certificates)
DOMAIN=lms.yourdomain.com

# ==============================================================================
# DATABASE SETTINGS
# ==============================================================================
MOODLE_DBTYPE=pgsql
MOODLE_DBHOST=db
MOODLE_DBNAME=moodle
MOODLE_DBUSER=moodleuser
MOODLE_DBPORT=5432
MOODLE_DBPREFIX=mdl_

# IMPORTANT: Change this password for production!
MOODLE_DBPASSWORD=your_secure_database_password_here

# ==============================================================================
# MOODLE SITE SETTINGS
# ==============================================================================
# Your site URL (including https:// for production)
MOODLE_WWWROOT=https://lms.yourdomain.com

# Moodle data directory (inside container)
MOODLEDATA_PATH=/var/www/moodledata

# Site name and shortname
MOODLE_FULLNAME=My Learning Platform
MOODLE_SHORTNAME=LMS

# ==============================================================================
# ADMIN SETTINGS
# ==============================================================================
# IMPORTANT: Change these for production!
MOODLE_ADMIN=admin
MOODLE_ADMIN_PASSWORD=Your_Secure_Admin_Password_123!
MOODLE_ADMIN_EMAIL=admin@yourdomain.com

# ==============================================================================
# REDIS SETTINGS
# ==============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_MAXMEMORY=256mb

# ==============================================================================
# SSL/PROXY SETTINGS
# ==============================================================================
# Set to true if behind a reverse proxy that terminates SSL (like Coolify/Traefik)
MOODLE_SSL_PROXY=true

# ==============================================================================
# PHP SETTINGS
# ==============================================================================
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=300
PHP_MAX_INPUT_VARS=5000
PHP_UPLOAD_MAX_FILESIZE=512M
PHP_POST_MAX_SIZE=512M

# ==============================================================================
# BRANDING SETTINGS (WHITE-LABEL)
# ==============================================================================
# These are used by the whitelabel configuration system
BRAND_NAME=MyBrand
